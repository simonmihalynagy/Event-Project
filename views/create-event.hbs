<div class="header">
  <h1 class="text-primary"> Create an Event!</h1>

</div>
<form class="px-4 py-3" action="/users/create-event" method="POST">

  <div class="form-group">
    <label for="input-title">Title</label>
    <input
      type="text"
      class="form-control"
      id="input-title"
      placeholder="Title"
      name="title"
    />
  </div>
  <div class="form-group">
    <label for="input-startDate">Start Date</label>
    <input
      type="date"
      class="form-control"
      id="input-startDate"
      placeholder="startDate"
      name="startDate"
    />
  </div>
  <div class="form-group">
    <label for="input-description">Description</label>
    <input
      type="text"
      class="form-control"
      id="input-description"
      placeholder="description"
      name="description"
    />
  </div>
  <div class="form-group">
    <label for="input-duration">Duration</label>
    <input
      type="number"
      class="form-control"
      id="input-duration"
      placeholder="duration"
      name="duration"
    />
  </div>
  <div class="form-group">
    <label for="input-location">Location</label>
    <input
      type="text"
      class="form-control"
      id="input-location"
      placeholder="location"
      name="location"
    />
  </div>

  <button type="submit" class="btn btn-primary">Create!</button>
</form>