<div class="header">
  <h1 class="text-primary">Welcome to Thy-Vent!</h1>

  <br />
  <br />

  <h4>Please sign in or create an account!</h4>
</div>

<div class="index__container">

  <div class="index__container-inner">

    <form class="px-4 py-3 index__form" action="/users/login" method="POST">
      <div class="form-group">
        <label for="email-input">Email address</label>
        <input
          type="email"
          class="form-control"
          id="email-input"
          placeholder="email@example.com"
          name="email"
        />
      </div>
      <div class="form-group">
        <label for="password-input">Password</label>
        <input
          type="password"
          class="form-control"
          id="password-input"
          placeholder="Password"
          name="password"
        />
      </div>

      <button type="submit" class="btn btn-primary">Sign in</button>
    </form>
    <div class="px-4 py-3 form-group-index">
      <p>not registered yet? </p>
      <button class="btn btn-primary">
        <a href="/users/register" class="text-white">Create account!</a>
      </button>

    </div>
  </div>
</div>