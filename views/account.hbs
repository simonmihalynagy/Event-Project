<div class="px-4 py-3 profile picture-container">
  <div>
    <img class="profile-picture" src="{{user.imageURL}}" alt="profilePicture" />
  </div>
  <h2>Hello {{user.firstName}}</h2>

</div>

<form
  action="/users/{{user.id}}/account"
  class="px-4 py-3 event-box"
  method="post"
  enctype="multipart/form-data"
>
  <h4 class="event-box">your account details:</h4>
  {{!-- <input type="text" name="email" id="email" placeholder="{{user.email}}" />  --}}

  <div class="form-group">
    <label for="firstName">Upload profile-picture: </label>
    <input type="file" name="profilePhoto" id="profilePhoto" />
    <input
      type="text"
      name="existingImage"
      hidden
      id=""
      value="{{user.imageURL}}"
    />
  </div>
  <div class="form-group">
    <label for="firstName">Your first Name: </label>
    <input
      type="text"
      name="firstName"
      id="firstName"
      placeholder="{{user.firstName}}"
      value="{{user.firstName}}"
    />
  </div>
  <div class="form-group">
    <label for="lastName">Your last Name: </label>
    <input
      type="text"
      name="lastName"
      id="lastName"
      placeholder="{{user.lastName}}"
      value="{{user.lastName}}"
    />
  </div>
  <br />
  <h4 class="event-box">fill in your address:</h4>
  <br />
  <div class="form-group">
    <label for="addressName">Address name</label>
    <input
      type="text"
      name="addressName"
      id="addressName"
      placeholder="{{user.address.addressName}}"
      value="{{user.address.addressName}}"
    />
  </div>
  <div class="form-group">
    <label for="streetName">Street name</label>

    <input
      type="text"
      name="streetName"
      id="streetName"
      placeholder="{{user.address.streetName}}"
      value="{{user.address.streetName}}"
    />
  </div>

  <div class="form-group">
    <label for="streetNumber">Street numer</label>

    <input
      type="text"
      name="streetNumber"
      id="streetNumber"
      placeholder="{{user.address.streetNumber}}"
      value="{{user.address.streetNumber}}"
    />
  </div>

  <div class="form-group">
    <label for="postalCode">Postal code</label>
    <input
      type="text"
      name="postalCode"
      id="postalCode"
      placeholder="{{user.address.postalCode}}"
      value="{{user.address.postalCode}}"
    />
  </div>
  <div class="form-group">
    <label for="city">City</label>

    <input
      type="text"
      name="city"
      id="city"
      placeholder="{{user.address.city}}"
      value="{{user.address.city}}"
    />
  </div>
  <div class="form-group">
    <label for="country">Country</label>

    <input
      type="text"
      name="country"
      id="country"
      placeholder="{{user.address.country}}"
      value="{{user.address.country}}"
    />
  </div>
  <button class="btn btn-primary" type="submit">Save Settings</button>
</form>
<div class="event-box">

  <a
    class="btn btn-primary inline"
    href="/users/{{user.id}}/delete-account"
  >Delete account</a>

</div>
<div class="event-box">

  <a class="btn btn-primary inline" href="/">Go Back</a>
</div>