<h1>Dear {{user.firstName}}, here are your events:</h1>
<br />
<h4>To edit your events, click edit below the event</h4>
<h2>Events you created:</h2>
<br />
{{#each adminEvents}}
  admin:
  {{this.admin.0.firstName}}
  <br />
  title:
  {{this.title}}
  <br />
  {{this.description}}
  <br />
  <a href="/users/{{this.id}}/edit"><button
      class="btn btn-primary"
      type="submit"
    >Edit this event</button></a>
  <br />
  <br />
  <a href="/users/{{this.id}}/delete"><button
      class="btn btn-primary"
      type="submit"
    >Delete this event</button></a>
  <br />
  <br />
  <a href="/users/{{this.id}}/details"><button class="btn btn-primary">Show
      Details</button></a>
  <br />
  <br />
  <hr />
{{/each}}

{{! copied details button here as well to be able to access details form events that you attend }}

<h2>Events you attend:</h2>
{{#each guestEvents}}
  <h3>title: {{this.title}}</h3>
  <a href="/users/{{this.id}}/details"><button class="btn btn-primary">Show
      Details</button></a>
  <br />
{{/each}}

<a href="/users/{{user.id}}" class="btn btn-primary">Go back!</a>